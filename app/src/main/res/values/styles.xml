<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Main-->
    <style name="Main">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>

        <item name="colorControlActivated">@color/sesl_control_activated_color</item>
        <item name="colorControlNormal">@color/sesl_control_normal_color_light</item>

        <item name="android:progressBarStyle">@style/Base.Widget.AppCompat.ProgressBar.Circle</item>
        <item name="android:progressBarStyleHorizontal">@style/Base.Widget.AppCompat.ProgressBar.Horizontal</item>
        <item name="android:progressBarStyleSmall">@style/Base.Widget.AppCompat.ProgressBar.Small</item>
        <item name="android:progressBarStyleLarge">@style/Base.Widget.AppCompat.ProgressBar.Large</item>
        <item name="android:progressBarStyleSmallTitle">@style/Base.Widget.AppCompat.ProgressBar.Title</item>
        <item name="android:progressBarStyleInverse">@style/Base.Widget.AppCompat.ProgressBar.Circle</item>
        <item name="android:progressBarStyleSmallInverse">@style/Base.Widget.AppCompat.ProgressBar.Small</item>
        <item name="android:progressBarStyleLargeInverse">@style/Base.Widget.AppCompat.ProgressBar.Large</item>

        <item name="checkboxStyle">@style/CheckBoxStyle</item>
        <item name="materialCardViewStyle">@style/CardViewStyle</item>
        <item name="switchStyle">@style/SwitchStyle</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>


        <!--
                <item name="seslSwitchBarStyle">@style/Base.Widget.AppCompat.SeslSwitchBar</item>
        -->






    </style>


    <!--ProgressBar-->
    <style name="Base.Widget.AppCompat.ProgressBar.Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@drawable/sesl_progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/sesl_progress_horizontal</item>
    </style>
    <style name="Base.Widget.AppCompat.ProgressBar.Small" parent="@style/Base.Widget.AppCompat.ProgressBar.Circle">
        <item name="android:maxWidth">@dimen/sesl_progress_bar_size_small</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_size_small</item>
        <item name="android:minWidth">@dimen/sesl_progress_bar_size_small</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_size_small</item>
    </style>
    <style name="Base.Widget.AppCompat.ProgressBar.Large" parent="@style/Base.Widget.AppCompat.ProgressBar.Circle">
        <item name="android:maxWidth">@dimen/sesl_progress_bar_size_large</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_size_large</item>
        <item name="android:minWidth">@dimen/sesl_progress_bar_size_large</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_size_large</item>
    </style>
    <style name="Base.Widget.AppCompat.ProgressBar.Circle" parent="@android:style/Widget.ProgressBar">
        <item name="android:maxWidth">@dimen/sesl_progress_circle_size</item>
        <item name="android:maxHeight">@dimen/sesl_progress_circle_size</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/sesl_progress</item>
        <item name="android:progressDrawable">@drawable/sesl_progress_circle</item>
        <item name="android:minWidth">55.0dip</item>
        <item name="android:minHeight">55.0dip</item>
    </style>
    <style name="Base.Widget.AppCompat.ProgressBar.Title" parent="@style/Base.Widget.AppCompat.ProgressBar.Circle">
        <item name="android:maxWidth">@dimen/sesl_progress_bar_size_small_title</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_size_small_title</item>
        <item name="android:minWidth">@dimen/sesl_progress_bar_size_small_title</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_size_small_title</item>
    </style>


    <!--CheckBox-->
    <style name="CheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@drawable/sesl_control_background</item>
        <item name="android:button">@drawable/sesl_btn_check</item>
    </style>


    <!--CardView-->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">26dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/item_background_color</item>
    </style>


    <!--Switch-->
    <style name="SwitchStyle" parent="@android:style/Widget.CompoundButton">
        <item name="android:background">@drawable/sesl_switch_background</item>
        <item name="android:thumbOffset">0dp</item>
        <item name="android:thumb">@drawable/sesl_switch_thumb_selector</item>
        <item name="android:switchMinWidth">20dp</item>
        <item name="showText">false</item>
        <item name="switchPadding">0dp</item>
        <item name="track">@drawable/sesl_switch_track_selector</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="enforceMaterialTheme">false</item>
        <item name="android:textSize">18dp</item>
    </style>


    <!--SwitchBar-->
    <style name="SwitchBarStyle" parent="SwitchStyle">
        <item name="android:background">@drawable/sesl_rounded_background</item>
        <item name="android:backgroundTint">@color/sesl_switchbar_color_selector</item>
        <item name="android:paddingHorizontal">26dp</item>
        <item name="android:layout_height">64dp</item>
    </style>


    <!--Button-->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/button_ripple_color</item>
        <item name="cornerRadius">26dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>



